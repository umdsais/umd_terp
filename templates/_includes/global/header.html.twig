{#
/**
 * @file
 * Displays the global header.
 *
 */
#}

{# Begin UMD Brand Site Header #}
<umd-element-navigation-header role="navigation">
	<a href="{{ path('<front>') }}" slot="logo">
	{% if logo_path %}
			<img src="{{ logo_path }}" alt="{{ site_name }}">
		{% else %}
			<span role="img" aria-label="{{ site_name }} logo" class="site-header__logo-text">
				<span aria-hidden="true">{{ site_name }}</span>
			</span>
		{% endif %}
	</a>
	{{ drupal_menu('main', 1, 2, TRUE) }}
</umd-element-navigation-header>
{# End UMD Brand Site Header #}
